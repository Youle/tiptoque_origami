.qty_form {
    display: flex;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 4px 8px;
    width: 50%;
    margin: -41px auto 0px;
    z-index: 100;
    position: relative;
    border-radius: 4px;
    justify-content: center;
  max-width: 274px;
}

input[type='number'].qty_form_input {
  width: 60px;
  margin: 0 8px 0;
  padding: 0 8px;
  -moz-appearance: textfield;
}

.qty_form_button {
  line-height: 1.5;
  background-color: white;
  font-weight: bold;
  width: 22px;
  text-align: center;
  cursor: pointer;
  transition: all .3s;
}

.qty_form_button:hover {
  background-color: #444;
  color: white;
}